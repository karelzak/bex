bex_ldadd = $(LDADD) libbex.la
bex_cflags = $(AM_CFLAGS) -I$(libbex_incdir)
bex_ldflags = $(AM_LDFLAGS)

bin_PROGRAMS += bex-fetch bex-ping

bex_fetch_SOURCES = src/fetch.c
bex_fetch_LDADD = $(bex_ldadd)
bex_fetch_CFLAGS = $(bex_cflags)
bex_fetch_LDFLAGS = $(bex_ldflags)

bex_ping_SOURCES = src/ping.c
bex_ping_LDADD = $(bex_ldadd)
bex_ping_CFLAGS = $(bex_cflags)
bex_ping_LDFLAGS = $(bex_ldflags)

